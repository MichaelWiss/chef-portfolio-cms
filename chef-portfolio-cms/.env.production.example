# Production Environment Variables for Vercel Deployment

# Database Configuration (PostgreSQL for production)
DATABASE_CLIENT=postgres
DATABASE_URL=postgresql://username:password@host:port/database
DATABASE_SSL=true
DATABASE_SSL_REJECT_UNAUTHORIZED=false
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Security Keys (Generate new ones for production using scripts/generate-keys.js)
APP_KEYS=your_app_key_1,your_app_key_2,your_app_key_3,your_app_key_4
API_TOKEN_SALT=your_api_token_salt
ADMIN_JWT_SECRET=your_admin_jwt_secret
TRANSFER_TOKEN_SALT=your_transfer_token_salt
JWT_SECRET=your_jwt_secret
ENCRYPTION_KEY=your_encryption_key

# Server Configuration
HOST=0.0.0.0
PORT=1337
NODE_ENV=production
PUBLIC_URL=https://your_cms_domain.vercel.app

# CORS Configuration
FRONTEND_URL=https://your_frontend_domain.vercel.app

# File Upload Configuration (Cloudinary)
UPLOAD_PROVIDER=cloudinary
CLOUDINARY_NAME=your_cloudinary_name
CLOUDINARY_KEY=your_cloudinary_key
CLOUDINARY_SECRET=your_cloudinary_secret
CLOUDINARY_UPLOAD_PRESET=chef_portfolio
CLOUDINARY_FOLDER=chef_portfolio

# Email Configuration (SendGrid)
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=your_sendgrid_api_key
EMAIL_DEFAULT_FROM=noreply@your-domain.com
EMAIL_DEFAULT_REPLY_TO=chef@your-domain.com

# MailerLite Configuration
MAILERLITE_API_KEY=your_mailerlite_api_key
MAILERLITE_GROUP_ID=your_default_group_id

# Optional: Analytics and Monitoring
SENTRY_DSN=your_sentry_dsn
GOOGLE_ANALYTICS_ID=your_ga_id

# Optional: Redis for caching (if needed)
# REDIS_URL=redis://username:password@host:port

# Production Optimizations
SERVER_WORKERS=1
CACHE_ENABLED=true
LOG_LEVEL=info